html(lang='en')
    head
    body
        title Bootstrap Example
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/4.1.3/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js')
        style.
            body{
                background-color: grey;
                background-image: url(../img/bg1.png);
                background-attachment:fixed;
            }
            #navl {
                width:40%;
                float:left;
                padding-left:5%;
                padding-right:2%;
                padding-top: 1%;
                margin:0;
            }
            #section {
                width:60%;
                float:right;
                padding-left:2%;
                padding-right:5%;
                padding-top: 1%;
                margin:0;
            }
            .panel-default {
                opacity: 0.95;
            }
            #container{
                margin : 20%;
            }
            .card{
                background-color: rgb(232, 248, 249);
                margin: 20px;
            }
        form
            .container(style='margin-top : 10%;')
                .card
                    .card-header
                        | History
                    .card-body
                        table.table
                            tbody
                                tr
                                    th Type
                                    th Amount
                                    th Identity
                                    th Date
                                each item in history
                                    tr
                                        td=item.type
                                        td=item.amount
                                        td=item.id
                                        td=item.date
                        a.btn.btn-success.btn-block.btn-lg(href='/home', role='button') Back