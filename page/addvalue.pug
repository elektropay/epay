doctype html
html(lang='en')
    head
        title Bootstrap Example
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    style.
        body {
            background-color: grey;
            background-image: url(../img/bg1.png);
            background-attachment: fixed;
        }

        #navl {
            width: 40%;
            float: left;
            padding-left: 5%;
            padding-right: 2%;
            padding-top: 1%;
            margin: 0;
        }

        #section {
            width: 60%;
            float: right;
            padding-left: 2%;
            padding-right: 5%;
            padding-top: 1%;
            margin: 0;
        }

        .panel-default {
            opacity: 0.95;
        }
    body
        form(id='addvalue-form', method='post')
            .container(style='margin-top : 10%;')
                .row
                    .col-md-4.col-md-offset-4
                        .panel.panel-default
                            h3.text-center
                                | Add Value
                            .panel-body
                                .form-group
                                    .input-group
                                        span.input-group-addon
                                            span.glyphicon.glyphicon-usd
                                        input.form-control(type='number', name='amount', placeholder='Value to be added')

                                .form-group
                                    .input-group
                                        span.input-group-addon
                                            span.glyphicon.glyphicon-credit-card
                                        //label(for='sel1') </C>:
                                        select(name='card')#card.form-control
                                            option(value=null) Select Credit Card
                                            each item in cards
                                                option(value=item.num)=item.num

                                //.form-group
                                    .input-group
                                        span.input-group-addon
                                            span.glyphicon.glyphicon-lock
                                        input.form-control(type='password', placeholder='Password')
                                button.btn.btn-lg.btn-info.btn-block(type='submit' id='add-value')
                                    | Add Value
                                a.btn.btn-success.btn-block.btn-lg(href='/home', role='button') Back
    script(src='js/addvalue.js')