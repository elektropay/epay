doctype html
html(lang='en')
  head
    title Bootstrap Example
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
  style.
    body {
      background-color: grey;
      background-image: url(../img/bg1.png);
      background-attachment: fixed;
    }

    #navl {
      width: 40%;
      float: left;
      padding-left: 5%;
      padding-right: 2%;
      padding-top: 1%;
      margin: 0;
    }

    #section {
      width: 60%;
      float: right;
      padding-left: 2%;
      padding-right: 5%;
      padding-top: 1%;
      margin: 0;
    }

    .panel-default {
      opacity: 0.95;
    }
  body
    form
      .container(style='margin-top : 10%;')
        .row
          .col-md-4.col-md-offset-4
            .panel.panel-default
              h3.text-center
                | Change Password
              .panel-body
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-lock
                    input.form-control(type='password', placeholder='Old Password' id='pass')
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-lock
                    input.form-control(type='password', placeholder='New Password' id='newpass')
                .form-group
                  .input-group
                    span.input-group-addon
                      span.glyphicon.glyphicon-lock
                    input.form-control(type='password', placeholder='Confirm New Password' id='newpass1')
                button.btn.btn-lg.btn-info.btn-block(type='button' id='change-save')
                  | Save
                a.btn.btn-success.btn-block.btn-lg(href='/home', role='button') Back
  script('src=js/changepassword.js')